@model MyChurch.Web.Data.Entities.Admin

@{
    ViewData["Title"] = "Details";
}

<h2>Admin</h2>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.User.Document)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Document)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.Address)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Address)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.PhoneNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.PhoneNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt>
            # Ministry
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ministries.Count)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="AddMinistry" asp-route-id="@Model.Id" class="btn btn-primary">Add Ministry</a> 
    <a asp-action="Index" class="btn btn-success">Back to List</a>

</div>
<h4>Ministries</h4>
@if (Model.Ministries.Count == 0)
{
    <h4>No Ministry Found.</h4>
}
else
{
    <table class="table">
       <thead>
           <tr>
               <th>
                   @Html.DisplayNameFor(model => model.Ministries.FirstOrDefault().Name)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.Ministries.FirstOrDefault().ImageUrl)
               </th>

               <th>
                   @Html.DisplayNameFor(model => model.Ministries.FirstOrDefault().Leader)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.Ministries.FirstOrDefault().SubLeader)
               </th>
               <th>
                   @Html.DisplayNameFor(model => model.Ministries.FirstOrDefault().BiblicalWord)
               </th>
               <th></th>
           </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Ministries)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@Url.Content(item.ImageUrl)" alt="Image" style="width:200px;height:200px;max-width: 100%; height: auto;" />
                    }
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Leader)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubLeader)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BiblicalWord)

                </td>
                <td>
                    <a asp-action="EditMinistry" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DetailsMinistry" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="DeleteMinistry" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

}
